(fn countit ()
    (do
        (let counter 1)
        (lambda () 
            (do
                (inc counter)
                counter
            ))))

(let c (countit))
(assert (c) 2 "Closure doesn't work")
(assert (c) 3 "Closure doesn't work")
(assert (c) 4 "Closure doesn't work")
(assert (c) 5 "Closure doesn't work")
